<%= form_for :sales_list_add,
      :url => sales_list_add_publish_path do |f| %>
    <%= f.label :email, t("view.email") %>
    <%= f.email_field :email %>
    <br>



    <%= f.label :publish_commapany_id, 
          t("view.publish_company_name") %>
    <%= f.select(:publish_company_id, options_for_select(
          @current_sales_manager_master_publish_list.map{|i| 
            [i.name,i.id]}))%>
    <br>

    <%= f.submit t("view.create") %>
    <br>
<% end %>

